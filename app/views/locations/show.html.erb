<p id="notice"><%= notice %></p>

<h2>You are currently at:</h2>

<p><%= @location.my_location %></p>

<h3>The Closest buses are:</h3>

<% if @bus_count == 0 %>
	<p>Sorry, there aren't any buses nearby</p>
<%else%>
	<% @nearby_buses.each do |bus| %>
	<strong>Route</strong>:<%= bus["ROUTE"] %><br>
	<strong>Vehicle</strong>:<%= bus["VEHICLE"] %><br>
	<strong>NextStop</strong>:<%= bus["TIMEPOINT"] %><br>
<%end%>

<p>
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @location.city %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>

<%= link_to 'Edit Location', edit_location_path(@location) %>
<%end%>
